    textarea
      padding: 0;
      width: 100%;
      height: 60px;
      font-size: 14px;
      outline: none;
      border: 0 none;
      resize : none;

  .text {
    border: 0;
    width: 430px;
    heigh: 100%;
    padding: 0;
    font-size: 16px;
    text-align: justify;
    line-height: 20px;
    -webkit-box-align: center;
  }

  .textarea {
    border: 0;
    width: 414px;
    font-size: 16px;
    text-align: justify;
    padding: 0;
    word-break break-all;
    line-height: 20px;
    -webkit-box-align: center;
  }

  .active-text {
    width: 420px;
    border: 1px solid lightskyblue;
    border-radius: 5px;
    text-align: justify;
    word-break break-all;
    resize:none
  }
  #tag + .active-text {
    border: 1px solid lightskyblue;
    border-radius: 5px;
    text-align: justify;
    width: 414px;
    margin-top: 7px;
  }
  #tag {
    width auto;
    color: #12b7f5;
    padding: 2px 2px 0 0;
  }
  span#tag:before {
    display: block;
    font-size: 14px;
    cursor: default;
  }
  #hide {
    display: none;
  }

  .prepare-content textarea {
    overflow-y: scroll;
    margin-top: 5px;
    text-align: justify;
    font-size: 16px;
    line-height: 20px;
    resize:none
  }
  .prepare-body ul li>div,.prepare-body ul li span{
    height: 100%;
  }
  #prepare-content > ul > li,#prepare-content > ul > li > .handle{
    display :flex;
    flex-direction row
    justify-content center;
    align-items :center
  }
  .prepare-body .prepare-content ul li > .markdown
    display: block;
    flex-direction: column;
    ul
     list-style-type: disc;
     li
       border-bottom: 0 !important;
       padding: 0 !important;
  .hide
    display: none !important;
  .markdown li:before
    content: "·";
  .textarea-hint
    padding: 0 1em 1em 1em;
