@import '~@lib/css/index.styl';

.l-comment {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 540px;
  z-index: 9;
  border-top: 1px solid #ccc;
  overflow: hidden;
  //background-color:rgba(0,0,0,0.6);
  //-moz-box-shadow:-1px -4px 5px #D0F1FD;
  //-webkit-box-shadow:-1px -4px 5px #D0F1FD;
  //box-shadow:-1px -4px 5px #D0F1FD;

  &.big {
    height: 80%;
  }
  .back-live {
    text-align: center;
    button {
      background: transparent;
      border: 0 none;
      color: #12B7F5;
      px2px(font-size, 32px);
    }
  }
  .comment-body {
    position: relative;
    padding-top: 70px;
    height: 100%;
    background: #fff;
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;/* 解决ios滑动不流畅问题 */
  }
  .comment-title {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 15px 30px;
    text-align: center;
    z-index: 6;
    color: #12B7F5;
    background: #fff;
    overflow: hidden;
    -moz-box-shadow:0px 6px 16px #EDEDED;
    -webkit-box-shadow:0px 6px 16px #EDEDED;
    box-shadow:0px 6px 16px #EDEDED;
    px2px(font-size, 32px);

    .iconfont {
      px2px(font-size, 40px);
    }
  }

  .comment-content {
    position: relative;
    padding: 15px 20px 300px;
    padding-bottom: 200px;
    px2px(font-size, 32px);

    li {
      position: relative;
      margin-top: 10px;
      padding: 7px 10px 8px 60px;
      background: #EAEFF7;
      border-radius: 20px;
      -webkit-border-radius: 20px;
      //border-bottom: 1px solid #D6DAF2;

      .user-img {
        position: absolute;
        px2px(left, 10px);
        px2px(top, 8px);

        img {
          width: 43px;
          height: 43px;
          border-radius: 50%;
          -webkit-border-radius: 50%;
        }
      }
      .user-content {
        px2px(line-height, 42px);
        .con-title {
          display: inline;
          color: #AAA;
          white-space:pre-wrap;
          word-break:break-all;
          px2px(font-size, 28px);
          &.is-self {
            color: #12b7f5;
          }
        }
        .con-time {
          padding: 6px 0;
          color: gray;
          px2px(font-size, 24px);
        }
        .con-text {
          display: inline;
          margin-left: 3px;
          padding: 3px;
          white-space:pre-wrap;
          word-break:break-all;
          .button {
            padding: 5px 20px;
            background: #12b7f5;
            border-radius: 40px;
            -webkit-border-radius: 40px;
          }
          .forbin-box {
            position: absolute;
            display: none;
            left: 0;
            right: 0;
            bottom: 0;
            height: 38px;
            justify-content:center;
            align-items:center;
            background-color: rgba(0,0,0,0.8);
            .forbin {
              color: #fff;
              cursor: pointer;
              &:hover {
                color: #12b7f5;
              }
              &:first-child {
                margin-right: 25px;
              }
            }
          }
          a{
            color: #aaa;
            text-decoration: none;
            px2px(font-size, 28px);
            &:hover {
              color: #12b7f5;
            }
            .iconfont {
              px2px(font-size, 32px);
            }
          }
          .no-msg {
            color: #aaa;
            px2px(font-size, 28px);
          }
        }
      }
      &.is-admin {
        background: #d1e4f5;
        .user-content {
          .con-title {
            color: #12b7f5;
            &.admin {
              padding: 1px 7px;
              color: #fff;
              background: #12b7f5;
              border-radius: 8px;
              -webkit-border-radius: 8px;
              px2px(font-size, 24px);
            }
          }
        }
      }
      &:hover {
        .user-content {
          .con-text {
            .forbin-box {
              display: flex;
              display: -webkit-flex;
            }
          }
        }
      }
    }
    li:first-child {
      margin: 0;
      padding-top: 10px;
      padding-left: 0;
      padding-bottom: 10px;
      text-align: center;
      background: transparent;
      .con-text {
        background: #fff;
      }
    }
  }
}

.is-pc {
  .l-comment {
    right: 0;
    top: 0;
    bottom: 0;
    padding: 0;
    padding-bottom: 58px;
    width: 296px;
    height: auto;
    border-radius: 4px;
    background: #fff;
    box-shadow: 0 none;
    border-top: 0 none;

    .comment-body {
      padding-top: 40px;
    }
    .comment-title {
      border-bottom: 1px solid #D6DAF2;
      font-size: 16px;
      -moz-box-shadow: none;
      -webkit-box-shadow: none;
      box-shadow: none;
    }
    .comment-content {
      padding: 10px;
      font-size: 16px;

      li {
        margin-top: 5px;
        padding: 8px 0 8px 45px;
        border-radius: 10px;
        -webkit-border-radius: 10px;
        .user-content {
          padding-right: 20px;
        }
        &.is-admin {
          background: #d1e4f5;
          .user-content {
            .con-title {
              &.admin {
                padding: 0 5px;
                border-radius: 5px;
                -webkit-border-radius: 5px;
                px2px(font-size, 28px);
              }
            }
          }
        }
        .user-img {
          top: 4px;
          img {
            width: 30px;
            height: 30px;
          }
        }
        &:first-child {
          padding-left: 0;
          .user-content {
            padding-right: 0;
          }
        }
        &:last-child {
          margin-bottom: 60px;
        }
      }
    }
    .comment-chat {
      .box {
        margin: 0;
        width: 276px;
        .box-msg {
          input {
            padding-top: 5px;
          }
        }
      }
      .box-more {
        display: none;
      }
    }
    .full-member {
      >div {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        padding-top: 20px;
        font-size: 22px;
        background: #fff;
        color: #3c4a55;
        text-align: center;
        z-index: 6;
      }
    }
  }
}
